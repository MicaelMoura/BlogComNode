<h2>Lista de Postagens:</h2>
<hr>
<a href="/admin/postagens/add">
    <button class="btn btn-success">Nova Postagem</button>
</a>

{{#each posts}}
    <div class="card mt-2">
        <div class="card-body">
            <h4 class="card-title">{{titulo}} - <i>[{{categoria.nome}}] </i></h4> 
            <p class="card-text">
                    {{descricao}}
            </p>
            <p class="card-footer">
                <i style="font-size: 12px;">"{{slug}}" - {{data}}</i>
            </p>
            <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success">Editar</button></a>
            <a href="/admin/postagens/remove/{{_id}}"><button class="btn btn-danger">Apagar</button></a>
        </div>
        
    </div>
{{else}}
    <h5 class="mt-4"> <i>Nenhuma postagem cadastrada!</i></h5>
{{/each}}

