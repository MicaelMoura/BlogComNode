<div class="card">
    <div class="card-body">
        <div class="card-title">
            <h3>Nova Postagem</h3>
        </div>
        <div class="card-text">
            <form action="/admin/postagens/add/nova" method="post">
                <label for="titulo">Título: </label>
                    <input type="text" name="titulo" class="form-control" required>
                <label for="slug">Slug </label>
                    <input type="text" name="slug" class="form-control" required>
                <label for="descricao">Descrição: </label>
                    <input type="text" name="descricao" class="form-control" required>
                <label for="categoria">Categoria: </label>
                    <select name="categoria" class="form-select" required>
                        {{#each categorias}}
                            <option value="{{_id}}">{{nome}}</option>
                        {{else}}
                            <option value="-1">Nenhuma categoria cadastrada</option>
                        {{/each}}
                    </select>
                <label for="conteudo">Conteúdo: </label>
                    <textarea name="conteudo" class="form-control" style="height: 200px" required></textarea>
                <button type="submit" class="btn btn-success mt-4">Criar Postagem</button>
            </form>
        </div>
    </div>
</div>